<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".registration">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_to_fill"
            android:hint="City"
            android:gravity="center"
            android:paddingStart="4dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/max_age_text" />

        <Button
            android:id="@+id/find_activities"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/select_action_backround"
            android:fontFamily="@font/segoe_ui_bold"
            android:onClick="checkThatHaveAll"
            android:text="Search"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment2"
            app:layout_constraintVertical_bias="0.008" />

        <Button
            android:id="@+id/sports_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_to_fill"
            android:fontFamily="@font/segoe_ui"
            android:hint="Sport's Type"
            android:paddingStart="4dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/payment2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_to_fill"
            android:hint="Payment"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewSearch" />

        <EditText
            android:id="@+id/min_Age_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:hint="Minimal Age"
            android:inputType="textPersonName"
            android:paddingStart="4dp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sports_button" />

        <EditText
            android:id="@+id/max_age_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:hint="Maximal Age"
            android:inputType="textPersonName"
            android:paddingStart="4dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/min_Age_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>