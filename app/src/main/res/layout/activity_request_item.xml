<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".requestItem"
    android:layout_marginTop="30dp"
    android:background="@drawable/text_view_to_fill"
    android:shape="oval"
    android:padding="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >


    <TextView
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/accept"
        android:layout_toRightOf="@id/profile_image"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:textColor="#145202"
        android:textSize="20sp"
        />


    <ImageButton
        android:id="@+id/accept"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/decline"
        android:src="@drawable/ic_accept"
        android:background="@drawable/grenn_image_circlr"
        />

    <ImageButton
        android:id="@+id/decline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_declie"
        android:background="@drawable/grenn_image_circlr"
     />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_person_no_image"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"
        app:civ_border_color="#145202"
        android:paddingStart="5dp"/>


</RelativeLayout>